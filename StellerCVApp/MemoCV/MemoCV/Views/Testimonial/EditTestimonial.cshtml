@model EntityLayer.Concrete.Testimonial

@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h3>Referans Düzenleme Sayfası</h3>
@using (Html.BeginForm("EditTestimonial", "Testimonial", FormMethod.Post))
{
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x => x.TestimonialID, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Referans Adı</label>
                        @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Şirket</label>
                        @Html.TextBoxFor(x => x.Company, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        @Html.TextBoxFor(x => x.Comment, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Resim Yolu</label>
                        @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                </form>
}

